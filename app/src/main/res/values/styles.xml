<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/black</item>
        <item name="itemBackground">@color/black</item>
        <item name="itemIconTint">@color/wat_red</item>
        <item name="itemTextColor">@color/wat_red</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor" />
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/wat_red</item>
        <item name="hintTextColor">@color/wat_red</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/wat_red</item>
        <item name="startIconTint">@color/wat_red</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/wat_red_off</item>
        <item name="errorTextColor">@color/wat_red_off</item>
    </style>

</resources>