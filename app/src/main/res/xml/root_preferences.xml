<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/language">
        <ListPreference
            app:entries="@array/language_values"
            app:entryValues="@array/language_values"
            app:key="@string/choose_language"
            app:title="@string/choose_language" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme">
        <SwitchPreferenceCompat
            app:key="@string/change_theme"
            app:summaryOff="@string/light_theme"
            app:summaryOn="@string/dark_theme"
            app:title="@string/change_theme" />
    </PreferenceCategory>

</PreferenceScreen>